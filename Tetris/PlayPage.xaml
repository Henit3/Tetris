<Page x:Class="Tetris.PlayPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        d:DesignHeight="500" d:DesignWidth="600"
        Title="PlayPage">
    <Grid Height="450" IsHitTestVisible="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <Canvas Margin="25,25,25,25" Width="200" Background="SlateGray" Name="ArenaCanvas"></Canvas>
        <Label Grid.Column="1"
               Background="#FFF6FF32"
               BorderThickness="1,1,1,1" BorderBrush="Black"
               Height="30" Width="150"
               Margin="50,100,50,320"
               Content="Tetris"
               IsHitTestVisible="False" IsEnabled="{Binding IsActive}"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Page>
